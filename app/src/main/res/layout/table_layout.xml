<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/rowOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/one_two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="First Name" />

        <TextView
            android:id="@+id/one_three"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Last Name" />
    </TableRow>

    <TableRow
        android:id="@+id/rowTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/two_one"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:gravity="center_horizontal"
            android:text="1" />

        <TextView
            android:id="@+id/two_two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Hailemariam" />

        <TextView
            android:id="@+id/two_three"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Arega" />
    </TableRow>

    <TableRow
        android:id="@+id/rowThree"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/three_one"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:gravity="center_horizontal"
            android:text="2" />

        <TextView
            android:id="@+id/three_two"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:text="Boss" />

        <TextView
            android:id="@+id/three_three"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="Mr." />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="loadLinearLayout"
            android:text="@string/back" />

    </TableRow>

</TableLayout>